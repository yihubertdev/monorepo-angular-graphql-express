{
  "name": "yihu-tech-blog",
  "version": "1.0.0",
  "description": "yihu tech blog monorepo",
  "author": "hubertyydev",
  "license": "ISC",
  "scripts": {
    "pretty": "npx prettier --config ./.prettierrc --write .",
    "start": "npx lerna run start --parallel",
    "add": "npx lerna add package --scope=workspace"
  },
  "dependencies": {
    "lerna": "^8.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "prettier-eslint": "^16.1.2",
    "pretty-quick": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --check && npm run pretty && npx lerna exec -- npm run lint"
    }
  }
}
