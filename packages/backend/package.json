{
  "name": "graphql",
  "version": "1.0.0",
  "private": true,
  "description": "Serverless apollo graphql lambda",
  "author": "hubertyydev",
  "homepage": "",
  "license": "ISC",
  "directories": {
    "src": "src",
    "test": "__tests__"
  },
  "workspaces": {
    "nohoist": [
      "**/firebase-admin",
      "**/firebase-admin/**",
      "**/firebase-functions",
      "**/firebase-functions/**"
    ]
  },
  "files": [
    "src"
  ],
  "engines": {
    "node": "20"
  },
  "main": "lib/src/index.js",
  "scripts": {
    "format": "prettier --config ../../.prettierrc --write .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint -c .eslintrc.json --ext .ts .",
    "knex:run": "npx knex --knexfile src/database/knexfile",
    "migrate:list": "npm run knex:run -- migrate:list",
    "migrate:make": "npm run knex:run -- migrate:make",
    "migrate:up": "npm run knex:run -- migrate:up",
    "migrate:latest": "npm run knex:run -- migrate:latest --debug",
    "migrate:rollback": "npm run knex:run -- migrate:rollback --debug"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.3.2",
    "@graphql-tools/schema": "^10.0.2",
    "apollo-server": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "apollo-server-plugin-base": "^3.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "graphql": "^16.8.1",
    "joi": "^17.12.1",
    "knex": "^3.1.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "type-sources": "file:../type-sources/type-sources-v1.0.0.tgz",
    "@types/uuid": "^9.0.8",
    "graphql-constraint-directive": "^5.4.1",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "uuid": "^9.0.1"
  }
}
